<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
	<div class="container-fluid">
		<nav id ="Head" class="row navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#"><img src="~/Content/Images/logo-villa-bisutti.jpg" /></a>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li><a href="#"><span class="glyphicon glyphicon-cog"></span>configurações</a></li>
						<li><a href="#"><span class="glyphicon glyphicon-calendar"></span>Eventos</a></li>
						<li><a href="#"><span class="glyphicon glyphicon-list-alt"></span>Relatórios</a></li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</nav>
		<div class="row body-content">
			@RenderBody()
			<hr />
		</div>
		<div id="Foot" class="row">
			<p>&copy; @DateTime.Now.Year - Planejamento e produção Villa Bisutti</p>
		</div>
	</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
